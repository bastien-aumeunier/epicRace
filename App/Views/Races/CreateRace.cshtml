@model App.ViewModels.CreateRaceRequest

@{
    ViewData["Title"] = "CreateRace";
}

<h1>CreateRace</h1>

<h4>Race</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RaceName" class="control-label"></label>
                <input asp-for="RaceName" class="form-control" />
                <span asp-validation-for="RaceName" class="error-label"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceDate" class="control-label"></label>
                <input asp-for="RaceDate" class="form-control" />
                <span asp-validation-for="RaceDate" class="error-label"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPlaces"class="control-label"></label>
                <input asp-for="NumberOfPlaces" class="form-control" min="2" value="15"/>
                <span asp-validation-for="NumberOfPlaces" class="error-label"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" min="16" value="21"/>
                <span asp-validation-for="Age" class="error-label"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="error-label"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="error-label"></span>
            </div>
            <div class="form-group pt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

